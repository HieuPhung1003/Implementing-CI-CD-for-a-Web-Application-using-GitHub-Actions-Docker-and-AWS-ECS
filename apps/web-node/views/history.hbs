{{> header}}

<div class="container">
    <div class="glass-pane">
        <h2 class="mb-4">Lịch sử giao dịch kho</h2>

        <div class="table-responsive">
            <table class="modern-table">
                <thead>
                    <tr>
                        <th>Thời gian</th>
                        <th>Hành động</th>
                        <th>Sản phẩm</th>
                        <th>Thay đổi</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each transactions}}
                    <tr>
                        <td>{{this.date}}</td>
                        <td>
                            <span class="badge"
                                style="background: {{#if (quantity_gt_zero this.quantityChange)}}rgba(16, 185, 129, 0.2); color: #34d399{{else}}rgba(239, 68, 68, 0.2); color: #f87171{{/if}}">
                                {{this.action}}
                            </span>
                        </td>
                        <td>{{this.productName}} (ID: {{this.productId}})</td>
                        <td
                            style="font-weight: bold; color: {{#if (quantity_gt_zero this.quantityChange)}}#34d399{{else}}#f87171{{/if}}">
                            {{#if (quantity_gt_zero this.quantityChange)}}+{{/if}}{{this.quantityChange}}
                        </td>
                        <td>{{this.note}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{> footer}}