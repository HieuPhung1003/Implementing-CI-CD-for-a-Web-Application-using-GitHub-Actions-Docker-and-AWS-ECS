{
  "family": "webapp-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::155684259110:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "webapp-container",
      "image": "155684259110.dkr.ecr.ap-southeast-2.amazonaws.com/webapp-ci-cd:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/webapp-task",
          "awslogs-region": "ap-southeast-2",
          "awslogs-stream-prefix": "webapp"
        }
      }
    }
  ]
}
